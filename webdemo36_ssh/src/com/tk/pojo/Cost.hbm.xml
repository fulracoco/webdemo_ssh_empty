<?xml version="1.0"?>  
    <!DOCTYPE hibernate-mapping PUBLIC   
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"  
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">  
    <hibernate-mapping>  
        <!--生成默认为user的数据库表-->  
        <class name="com.tk.pojo.Cost" table="cost">  
            <id name="cost_id">  
            	<generator class="native"></generator>  
       		 </id>
            <property name="name"></property>  
           	<property name="base_duration"></property>
           	<property name="base_cost"></property>  
           	<property name="unit_cost"></property>
           	<property name="status"></property>
           	<property name="descr"></property>  
           	<property name="creatime" type="date"></property>
           	<property name="startime" type="date"></property>  
           	<property name="cost_type"></property>  
        </class>   
        
    </hibernate-mapping>